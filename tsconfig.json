{
    "compilerOptions": {
        "declaration": true,
        "composite": true,
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["**/*.ts", "test/**/*.json"],
    "exclude": ["dist", "node_modules"]
}

{
    "$schema": "http://json.schemastore.org/prettierrc",
    "tabWidth": 4,
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 80,
                "bracketSpacing": false
            }
        }
    ]
}
